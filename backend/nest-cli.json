{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../fonts",
        "outDir": "dist/fonts",
        "watchAssets": true
      },
      { "include": "i18n/**/*", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
